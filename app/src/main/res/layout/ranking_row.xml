<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/ranking_row"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_centerHorizontal="true"
    android:orientation="horizontal"
    android:paddingBottom="10dp">

    <TableLayout
        android:id="@+id/table_ranking_row"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:shrinkColumns="*"
        android:stretchColumns="*">

        <TableRow
            android:id="@+id/single_ranking_row"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <TextView
                android:id="@+id/player_pos"
                android:layout_width="@dimen/ranking_box_width"
                android:layout_height="@dimen/ranking_box_height"
                android:gravity="center_vertical|center"
                android:textStyle="bold"
                android:textSize="@dimen/pl_text_size"
                android:textColor="@android:color/black"
                android:text="1."/>

            <LinearLayout
                android:layout_width="@dimen/ranking_box_player_width"
                android:layout_height="@dimen/ranking_box_height"
                android:orientation="vertical">

                <ImageView
                    android:id="@+id/player_img"
                    android:layout_width="@dimen/ranking_box_player_width"
                    android:layout_height="@dimen/ranking_box_width"
                    android:gravity="center"
                    android:scaleType="fitCenter"
                    android:adjustViewBounds="true"
                    android:src="@drawable/soccer_ball"
                    android:padding="2dp"/>

                <TextView
                    android:id="@+id/player_name"
                    android:layout_width="@dimen/ranking_box_player_width"
                    android:layout_height="@dimen/ranking_box_width"
                    android:gravity="center"
                    android:textStyle="bold"
                    android:textSize="@dimen/pl_text_size"
                    android:textColor="@android:color/black"
                    android:text="Giocatore"
                    android:paddingStart="5dp"
                    android:paddingEnd="0dp"/>

            </LinearLayout>

            <TextView
                android:id="@+id/player_points"
                android:layout_width="@dimen/ranking_box_width"
                android:layout_height="@dimen/ranking_box_height"
                android:gravity="center_vertical|end"
                android:textStyle="bold"
                android:textSize="@dimen/pl_text_size"
                android:textColor="@android:color/black"
                android:text="24"/>

            <TextView
                android:id="@+id/player_num_matches"
                android:layout_width="@dimen/ranking_box_width"
                android:layout_height="@dimen/ranking_box_height"
                android:gravity="center_vertical|end"
                android:textStyle="bold"
                android:textSize="@dimen/pl_text_size"
                android:textColor="@android:color/black"
                android:text="10"/>

            <TextView
                android:id="@+id/player_wins"
                android:layout_width="@dimen/ranking_box_width"
                android:layout_height="@dimen/ranking_box_height"
                android:gravity="center_vertical|end"
                android:textStyle="bold"
                android:textSize="@dimen/pl_text_size"
                android:textColor="@android:color/black"
                android:text="14"/>

            <TextView
                android:id="@+id/player_draws"
                android:layout_width="@dimen/ranking_box_width"
                android:layout_height="@dimen/ranking_box_height"
                android:gravity="center_vertical|end"
                android:textStyle="bold"
                android:textSize="@dimen/pl_text_size"
                android:textColor="@android:color/black"
                android:text="51"/>

            <TextView
                android:id="@+id/player_defeats"
                android:layout_width="@dimen/ranking_box_width"
                android:layout_height="@dimen/ranking_box_height"
                android:gravity="center_vertical|end"
                android:textStyle="bold"
                android:textSize="@dimen/pl_text_size"
                android:textColor="@android:color/black"
                android:text="21"/>

            <TextView
                android:id="@+id/player_scored_goals"
                android:layout_width="@dimen/ranking_box_width2"
                android:layout_height="@dimen/ranking_box_height"
                android:gravity="center_vertical|end"
                android:textStyle="bold"
                android:textSize="@dimen/pl_text_size"
                android:textColor="@android:color/black"
                android:text="64"/>

            <TextView
                android:id="@+id/player_conceded_goals"
                android:layout_width="@dimen/ranking_box_width2"
                android:layout_height="@dimen/ranking_box_height"
                android:gravity="center_vertical|end"
                android:textStyle="bold"
                android:textSize="@dimen/pl_text_size"
                android:textColor="@android:color/black"
                android:text="210"/>

        </TableRow>

    </TableLayout>

</LinearLayout>