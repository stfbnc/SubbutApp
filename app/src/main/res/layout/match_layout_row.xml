<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/match_row"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_centerHorizontal="true"
    android:layout_gravity="center_horizontal"
    android:orientation="vertical"
    android:paddingLeft="10dp"
    android:paddingRight="10dp"
    android:paddingBottom="10dp"
    android:paddingTop="30dp">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">

        <LinearLayout
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:orientation="vertical"
            android:gravity="end">

            <ImageView
                android:id="@+id/img_left"
                android:layout_width="@dimen/ranking_box_player_width"
                android:layout_height="@dimen/match_img_height"
                android:gravity="center"
                android:scaleType="fitCenter"
                android:adjustViewBounds="true"/>

            <TextView
                android:id="@+id/player_left"
                android:layout_width="@dimen/ranking_box_player_width"
                android:layout_height="wrap_content"
                android:gravity="center"
                android:textStyle="bold"
                android:textSize="@dimen/pl_text_size"
                android:textColor="@android:color/black"/>

        </LinearLayout>

        <TextView
            android:id="@+id/res_left"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="0.4"
            android:fontFamily="@font/artifika"
            android:gravity="center"
            android:textColor="@android:color/black"
            android:textSize="@dimen/res_text_size"
            android:textStyle="bold" />

        <TextView
            android:id="@+id/dash_sep"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="0.1"
            android:gravity="center"
            android:textStyle="bold"
            android:textSize="@dimen/res_text_size"
            android:text="-"
            android:textColor="@android:color/black"/>

        <TextView
            android:id="@+id/res_right"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="0.4"
            android:gravity="center"
            android:textStyle="bold"
            android:textSize="@dimen/res_text_size"
            android:textColor="@android:color/black"/>

        <LinearLayout
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:orientation="vertical"
            android:gravity="start">

            <ImageView
                android:id="@+id/img_right"
                android:layout_width="@dimen/ranking_box_player_width"
                android:layout_height="@dimen/match_img_height"
                android:gravity="center"
                android:scaleType="fitCenter"
                android:adjustViewBounds="true"/>

            <TextView
                android:id="@+id/player_right"
                android:layout_width="@dimen/ranking_box_player_width"
                android:layout_height="wrap_content"
                android:gravity="center"
                android:textStyle="bold"
                android:textSize="@dimen/pl_text_size"
                android:textColor="@android:color/black"/>

        </LinearLayout>

    </LinearLayout>

</LinearLayout>